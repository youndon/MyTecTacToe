<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/main">

    <LinearLayout android:layout_width="377dp" android:layout_height="502dp"
                  tools:ignore="MissingConstraints"
                  android:gravity="center"
                  android:orientation="vertical" android:layout_marginTop="84dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/reset" app:layout_constraintVertical_bias="0.772"
                  android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="375dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:id="@+id/linearLayout3">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn7" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn8" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn9" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="375dp"
                android:layout_height="120dp"
                android:id="@+id/linearLayout"
                tools:ignore="MissingConstraints"        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn4" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn5" android:layout_weight="1"
                    android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn6" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="375dp"
                android:layout_height="120dp"
                android:id="@+id/linearLayout2"        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn1" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn2" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn3" android:layout_weight="1"
                    tools:ignore="ButtonStyle" android:onClick="click"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:onClick="reset"
            android:text="@string/reset"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/reset"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.49"/>

</android.support.constraint.ConstraintLayout>